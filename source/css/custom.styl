html, body {
    font-family: "Sen", 'ヒラギノ丸ゴ Pron', 'Hiragino Maru Gothic Pron', 'メイリオ', Meiryo, 'ヒラギノ角ゴシック', 'Hiragino Sans', sans-serif;
  }

.image-wrapper .image:not(.loaded) {
  -webkit-filter: none;
  filter: none;
}

.post-image:not(.loaded) {
  -webkit-filter: none;
  filter: none;
}

.archive-timeline-post-flex {
  display: flex;
  align-items: center;
}

.archive-timeline-thumbnail {
  flex-shrink: 0;
  width: 80px;
  height: 80px;
  margin-right: 15px;
}

.archive-timeline-thumbnail img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 8px;
}

.archive-timeline-info {
  display: flex;
  flex-direction: column;
}

.archive-timeline-post-date {
  font-size: 1.0rem;

}

.archive-timeline-post-item {
  font-size: 1.0rem;
  text-decoration: none;
}

.archive-timeline-category {
      font-size: 0.9rem;
}
.archive-timeline-post-item:hover {
  text-decoration: underline;
}

.card-excerpt,
.post-title {
  margin-bottom:.2rem
}
.card-post-footer {
  margin-bottom:.2rem
}
.navbar-logo-img {
  margin-right:5px
  width:25px;
}

@media (max-width: 742px) {
  #dark {
    display: block; /* または inline など適切な表示スタイル */
  }
  #search {
    display: block; /* または inline など適切な表示スタイル */
  }
}
.pagetop {
    color: #fff;
    background-color: rgba(211,46,117,0.3);
    text-decoration: none;
    display: none;
    position: fixed;
    bottom: 2em;
    right: 2rem;
    font-size: 1.2rem;
    width: 3rem;
    height: rem;
    line-height: 3rem;
    border-radius: 3rem;
    text-align: center;
    cursor: pointer;
}

.pagetop:hover {
    color: #fff !important;
    background-color: #d32e75;
    text-decoration: none;
}
.archive-timeline-tag {
  background-color:#d32e75;
}