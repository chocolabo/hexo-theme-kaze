body {
    font-family: 'Josefin Sans', 'ヒラギノ丸ゴ Pron', 'Hiragino Maru Gothic Pron', 'メイリオ', Meiryo, 'ヒラギノ角ゴシック', 'Hiragino Sans', sans-serif;
  }

.image-wrapper .image:not(.loaded) {
  -webkit-filter: none;
  filter: none;
}

.post-image:not(.loaded) {
  -webkit-filter: none;
  filter: none;
}

.archive-timeline-post-flex {
  display: flex;
  align-items: center;
}

.archive-timeline-thumbnail {
  flex-shrink: 0;
  width: 80px;
  height: 80px;
  margin-right: 15px;
}

.archive-timeline-thumbnail img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 8px;
}

.archive-timeline-info {
  display: flex;
  flex-direction: column;
}

.archive-timeline-post-date {
  font-size: 0.9rem;

}

.archive-timeline-post-item {
  font-size: 1.0rem;
  text-decoration: none;
}

.archive-timeline-category {
      font-size: 0.9rem;
}
.archive-timeline-post-item:hover {
  text-decoration: underline;
}
