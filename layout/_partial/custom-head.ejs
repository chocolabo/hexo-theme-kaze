<script>
    document.addEventListener('DOMContentLoaded', function() {
        var offset = 100;
        var duration = 500;
        var pagetop = document.querySelector('.pagetop');
    
        function handleScroll() {
            if (window.pageYOffset > offset && pagetop.style.display !== 'block') {
                pagetop.style.display = 'block';
            } else if (window.pageYOffset <= offset && pagetop.style.display !== 'none') {
                pagetop.style.display = 'none';
            }
        }
    
        function scrollToTop(event) {
            event.preventDefault();
            smoothScrollTo(0, duration);
        }
    
        function smoothScrollTo(target, duration) {
            var start = window.pageYOffset;
            var startTime = 'now' in window.performance ? performance.now() : new Date().getTime();
    
            function scroll() {
                var now = 'now' in window.performance ? performance.now() : new Date().getTime();
                var time = Math.min(1, ((now - startTime) / duration));
                window.scroll(0, Math.ceil((time * (target - start)) + start));
    
                if (window.pageYOffset === target) {
                    return;
                }
    
                requestAnimationFrame(scroll);
            }
    
            scroll();
        }
    
        window.addEventListener('scroll', handleScroll);
    
        pagetop.addEventListener('click', scrollToTop);
    
        window.addEventListener('beforeunload', function() {
            window.removeEventListener('scroll', handleScroll);
            pagetop.removeEventListener('click', scrollToTop);
        });
    });
    </script>